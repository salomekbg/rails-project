<h1>Create New Account</h1>
<%= form_for @user do |f| %>
  <%= f.label 'Username:' %>
  <br>
  <%= f.text_field :username %>
  <br><br>
  <%= f.label 'Password:' %>
  <br>
  <%= f.password_field :password %>
  <br><br>
  <%= f.label 'Confirm Password:' %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.submit 'Create User' %>
<% end %>
